# Database Configuration
# PostgreSQL connection string (Neon, Railway, or any PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Application Configuration
PORT=4000
NODE_ENV=development
UPLOAD_DIR="./uploads"

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL="http://localhost:3000"

# JWT Authentication
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRATION="8h"

# Email Configuration (Resend)
# Sign up for free at https://resend.com (100 emails/day free)
# 1. Create account at https://resend.com
# 2. Go to API Keys section
# 3. Create a new API key
# 4. Copy and paste it below
RESEND_API_KEY="re_123456789" # Your Resend API key
MAIL_FROM_NAME="Your App Name"
MAIL_FROM_ADDRESS="onboarding@resend.dev" # Use onboarding@resend.dev for free tier, or your verified domain

# Optional: Google OAuth (if implementing Google Sign-In)
# GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="your-client-secret"
# GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"
