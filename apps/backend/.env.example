# Database Configuration
# PostgreSQL connection string (Neon, Railway, or any PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Application Configuration
PORT=4000
NODE_ENV=development
UPLOAD_DIR="./uploads"

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL="http://localhost:3000"

# JWT Authentication
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRATION="8h"

# Email Configuration (SendGrid)
# Sign up for free at https://sendgrid.com (100 emails/day = 3,000/month free)
# 1. Create account at https://signup.sendgrid.com
# 2. Go to Settings â†’ API Keys
# 3. Create API Key with "Full Access"
# 4. Copy and paste it below
SENDGRID_API_KEY="your-sendgrid-api-key-here" # Your SendGrid API key (starts with "SG.")
MAIL_FROM_NAME="Your App Name"
MAIL_FROM_ADDRESS="noreply@example.com" # Any email (SendGrid will send from it)

# Optional: Google OAuth (if implementing Google Sign-In)
# GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="your-client-secret"
# GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"
