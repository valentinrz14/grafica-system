# Database Configuration
# PostgreSQL connection string (Neon, Railway, or any PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Application Configuration
PORT=4000
NODE_ENV=development
UPLOAD_DIR="./uploads"

# Frontend URL (comma-separated for multiple origins)
FRONTEND_URL="http://localhost:3000"

# JWT Authentication
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRATION="8h"

# Email Configuration (Mailgun)
# Sign up for free at https://mailgun.com (5,000 emails/month free)
# 1. Create account at https://signup.mailgun.com/new/signup
# 2. Go to "Sending" â†’ "Domain settings"
# 3. Copy your API key and sandbox domain
# 4. Paste them below
MAILGUN_API_KEY="your-mailgun-api-key-here" # Your Mailgun API key (starts with "key-")
MAILGUN_DOMAIN="sandbox-xxx.mailgun.org" # Your sandbox domain or verified domain
MAIL_FROM_NAME="Your App Name"
MAIL_FROM_ADDRESS="noreply@sandbox-xxx.mailgun.org" # Use your sandbox domain or verified domain

# Optional: Google OAuth (if implementing Google Sign-In)
# GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="your-client-secret"
